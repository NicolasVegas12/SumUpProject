<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:background="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    android:id="@+id/cvItem">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivCard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tvNroCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/ivCard"
            android:layout_toRightOf="@id/ivCard"
            android:text="4554 2563 2586 2648"
            android:textColor="@color/secondary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPropietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNroCard"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/ivCard"
            android:layout_toRightOf="@id/ivCard"
            android:text="Vegas Capristan Nicolas Benjamin"
            android:textColor="@color/secondary"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPropietario"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/ivCard"
            android:layout_toRightOf="@id/ivCard"
            android:text="25/08"
            android:textColor="@color/secondary"
            android:textSize="10sp"

            android:textStyle="bold" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>